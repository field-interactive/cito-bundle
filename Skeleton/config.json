{
  "publicPath": "./public",
  "assetsPath": "./public/assets",
  "bsProxy": "local.development.de",
  "watchHtml": "./pages/*",

  "fonts": {
    "src": [
      "./node_modules/font-awesome/fonts/*"
    ],
    "dest": "assets/build/fonts/"
  },

  "favicon": {
    "src": "./public/assets/image/icon/favicon.png",
    "dest": "./public/assets/build/img/favicon/",
    "data": "./favicon.json",
    "assets": "/assets/build/img/favicon/",
    "htmlSrc": [
      "./templates/partial/favicon.html"
    ],
    "htmlDest": "./templates/partial"
  },

  "styles": {
    "frontend": {
      "src": [
        "./node_modules/font-awesome/css/font-awesome.min.css",
        "./public/assets/sass/default.sass"
      ],
      "dest": "assets/build/css/main.css"
    }
  },

  "scripts": {
    "frontend": {
      "src": [
        "./public/assets/js/observer.js",
        "./node_modules/jquery/dist/jquery.min.js",
        "./public/assets/js/default.js"
      ],
      "dest": "assets/build/js/main.js"
    }
  }
}
