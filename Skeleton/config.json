{
  "publicPath": "/assets/build",
  "assetsPath": "public/assets/build",

  "styles": {
    "frontend": {
      "src": [
        "./public/assets/sass/default.sass"
      ],
      "dest": "css/main"
    }
  },

  "scripts": {
    "frontend": {
      "src": [
        "@babel/polyfill",
        "./public/assets/js/default.js"
      ],
      "dest": "js/main"
    }
  }
}
