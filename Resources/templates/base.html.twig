{% import '@Cito/macros.html.twig' as macro %}
<!DOCTYPE html>
{# cito #}
<html lang="de">

<head>
    {% block head %}

        <title>
            {% block title %}{% endblock %}
        </title>

        <meta name="description" content="{% block description %}{% endblock %}">

        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:image" content="{% block ogimage %}{% endblock %}">
        <meta property="og:description" content="{{ block('description') }}">

        <meta charset="UTF-8">

        {% block canonical %}{% endblock %}

        <meta content="noarchive" name="robots">
        <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport"/>

        {{ encore_entry_link_tags('css', null, 'modern') }}

        {% block stylesheets %}{% endblock %}

    {% endblock %}
</head>

<body class="{{ (body_class is defined) ? body_class : '' }}" id="{{ (body_id is defined) ? body_id : '' }}">

{% include 'partials/cookie.html.twig' %}

{% block body %}

{% endblock %}

{% if app.environment != 'dev' %}
    <script async defer>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js');
            });
        }
    </script>

{% endif %}
{% for file in encore_entry_js_files('js/modern', 'modern') %}
    <script type="module" src="{{ asset(file) }}" async></script>
{% endfor %}

{% if app.environment != 'dev' %}
    {% for file in encore_entry_js_files('js/legacy', 'legacy') %}
        <script nomodule src="{{ asset(file) }}" defer async></script>
    {% endfor %}
{% endif %}
{% block javascripts %}{% endblock %}
</body>

</html>
